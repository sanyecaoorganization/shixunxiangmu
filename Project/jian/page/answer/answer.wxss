.zhezhao {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
}
 
@keyframes myfirst {
  from {
    transform: translateY(-860rpx);
  }
  to {
    transform: translateY(0rpx);
  }
}
 
@keyframes mylast {
  from {
    transform: translateY(0rpx);
  }
  to {
    transform: translateY(-900rpx);
  }
}
 
